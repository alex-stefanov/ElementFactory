@{
    ViewData["Title"] = "Home Page";
}

@model List<ElementFactory.Data.Models.ChemicalElement>
<form>
    <table>
        <tbody>
            @for (int period = 1; period <= 7; period++)
            {
                <tr>
                    @for (int group = 1; group <= 18; group++)
                    {
                        var chemicalElement = @Model.FirstOrDefault(x => x.Period == period && x.Group == group);
                        if (chemicalElement == null)
                        {
                            <td></td>
                        }
                        else
                        {   
                            <td class="@chemicalElement.ChemicalType.Name">
                                <a>
                                <p>@chemicalElement.Symbol</p>
                                <p>@chemicalElement.Name</p>
                                </a>
                            </td>
                            
                        }
                    }

                </tr>

            }
            @for (int i = 1; i <= 2; i++)
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    @if (i == 1)
                    {
                        @foreach (var item in Model.Where(x => x.Group == 0 && x.Period == 6))
                        {
                            <td class="@item.ChemicalType.Name">
                                <a>
                                <p>@item.Symbol</p>
                                <p>@item.Name</p>
                                </a>
                            </td>
                        }
                    }
                    else
                    {
                        foreach (var item in Model.Where(x => x.Group == 0 && x.Period == 7))
                        {
                            <td class="@item.ChemicalType.Name">
                                <a>
                                <p>@item.Symbol</p>
                                <p>@item.Name</p>
                                </a>
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>     
    </table>
</form>

