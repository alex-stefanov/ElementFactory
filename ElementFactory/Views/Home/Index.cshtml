@{
    ViewData["Title"] = "Home Page";
}
@model List<ElementFactory.Data.Models.ChemicalElement>

<h3>Element:</h3>
<hr />
<form>
    
    <table class="table">
        <tbody>
            @for (int period = 1; period <= 7; period++)
            {
                <tr>
                    @for (int group = 1; group <= 18; group++)
                    {
                        if (Model.FirstOrDefault(x => x.Period == period && x.Group == group) == null)
                        {
                            <td></td>
                        }
                        else
                        {
                            <td>
                                <p>@Model.First(x => x.Period == period && x.Group == group).Symbol</p>
                                <p>@Model.First(x => x.Period == period && x.Group == group).Name</p>
                            </td>

                        }
                    }

                </tr>

            }
            @for (int i = 1; i <= 2; i++)
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    @if (i == 1)
                    {
                        @foreach (var item in Model.Where(x => x.Group == 0 && x.Period == 6))
                        {
                            <td>
                                <p>@item.Symbol</p>
                                <p>@item.Name</p>
                            </td>
                        }
                    }
                    else
                    {
                        foreach (var item in Model.Where(x => x.Group == 0 && x.Period == 7))
                        {
                            <td>
                                <p>@item.Symbol</p>
                                <p>@item.Name</p>
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>     
    </table>
</form>

