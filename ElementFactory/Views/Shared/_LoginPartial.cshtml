@using Microsoft.AspNetCore.Identity
@using ElementFactory.Data.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
       <a class="nav-link text-dark" asp-controller="User" asp-action="LoadProfile">Моят профил</a>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout" asp-area="Identity" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Излизане</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-controller="User" asp-action="Register">Регистриране</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-controller="User" asp-action="Login">Влизане</a>
    </li>
}
</ul>
